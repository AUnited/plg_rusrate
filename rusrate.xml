<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="system" method="upgrade">
	<name>PLG_SYSTEM_RUSRATE</name>
	<author>ecolora, AUnited</author>
	<creationDate>2015-03-23</creationDate>
	<copyright>Copyright (C) 2015 AUnited. Co. Ltd All rights reserved.</copyright>
	<authorEmail>info@aunited.ru</authorEmail>
	<authorUrl>http://aunited.ru/</authorUrl>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<version>0.9</version>
	<description>PLG_SYSTEM_RUSRATE_XML_DESCRIPTION</description>
	<files>
		<filename plugin="stopkids">stopkids.php</filename>
		<filename>index.html</filename>
		<folder>themes</folder>
		<folder>css</folder>
	</files>
    <languages folder="languages">
		<language tag="en-GB">en-GB/en-GB.plg_system_stopkids.ini</language>
		<language tag="ru-RU">ru-RU/ru-RU.plg_system_stopkids.ini</language>

		<language tag="en-GB">en-GB/en-GB.plg_system_stopkids.sys.ini</language>
		<language tag="ru-RU">ru-RU/ru-RU.plg_system_stopkids.sys.ini</language>
	</languages>

    <config>
	  <fields name="params">
		<fieldset name="basic">
          <field name="rrage" type="list" default="18" label="PLG_SYSTEM_STOPKIDS_AGE" description="PLG_SYSTEM_STOPKIDS_AGE_DESC">
 			<option value="0">0+</option>
 			<option value="6">6+</option>
 			<option value="12">12+</option>
 			<option value="16">16+</option>
			<option value="18">18+</option>
 		 </field>
          <field name="rrposition" type="list" default="0" label="PLG_SYSTEM_STOPKIDS_POSITION" description="PLG_SYSTEM_STOPKIDS_POSITION_DESC">
 			<option value="tr">PLG_SYSTEM_STOPKIDS_POSITION_TOP_RIGHT</option>
 			<option value="tl">PLG_SYSTEM_STOPKIDS_POSITION_TOP_LEFT</option>
 			<option value="br">PLG_SYSTEM_STOPKIDS_POSITION_BOTTOM_RIGHT</option>
 			<option value="br">PLG_SYSTEM_STOPKIDS_POSITION_BOTTOM_LEFT</option>
 		 </field>
         <field name="zindex" type="text" size="12" default="800" label="PLG_SYSTEM_STOPKIDS_ZINDEX" description="PLG_SYSTEM_STOPKIDS_ZINDEX_DESC" />
         <field name="color" type="text" size="12" default="#FFFFFF" label="PLG_SYSTEM_STOPKIDS_COLOR" description="PLG_SYSTEM_STOPKIDS_COLOR_DESC" />
         <field name="bgcolor" type="text" size="12" default="#BC121F" label="PLG_SYSTEM_STOPKIDS_BGCOLOR" description="PLG_SYSTEM_STOPKIDS_BGCOLOR_DESC" />
      	 <field name="onlyFP" type="radio" default="0" label="PLG_SYSTEM_STOPKIDS_ONLY_FRONTPAGE" description="PLG_SYSTEM_STOPKIDS_ONLY_FRONTPAGE_DESC">
 			<option value="1">JYES</option>
 			<option value="0">JNO</option>
 		 </field>
         <field name="infoURL" type="text" size="40" default="" label="PLG_SYSTEM_STOPKIDS_INFORMATION_URL" description="PLG_SYSTEM_STOPKIDS_INFORMATION_URL_DESC" />
	    </fieldset>
	  </fields>
	</config>
	 <updateservers>
        <server type="extension" priority="1" name="RusRate"><![CDATA[http://help.aunited.ru/rusrate/update/RusRate-update.xml]]></server>
    </updateservers>
</extension>